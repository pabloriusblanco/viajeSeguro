@model IndexViewModel;
@using X.PagedList;
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Reservas";
    Layout = "_Base";
}


<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card padding_30">
                <div class="text-center">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-between items-align-center">
                            <div>
                                <h6 class="card-title text-left mb-0">Reservas</h6>
                                <p class="mt-2 mb-0" style="font-size: 12px;">Desde acá se podrán realizar de acciones de para crear, modificar o eliminar las reservas de viaje</p>
                            </div>
                            <a href="@Url.Action("Crear")" class="btn btn-primary btn-round text-white my-0 d-flex align-items-center justify-content-center">
                                <i class="fas fa-plane mr-2" style="font-size: 14px;"></i>
                                Crear Reserva
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("~/Views/Reservas/Shared/_SearchForm.cshtml")


        <div class="col-md-12">
            <div class="card">
                <div class="card-body padding_30">
                    @await Html.PartialAsync("~/Views/Reservas/Shared/_MainTable.cshtml", Model.Reservas)
                    @Html.PagedListPager(Model.Reservas, page => Url.Action("Index", "Reservas", new { pageNumber = page }))
                </div>
            </div>
        </div>

    </div>
</div>


@section scripts {
    <script>
        let routeDelete;
        let reservaCode;

        $(".deleteReserva").click(function () {
            routeDelete = $(this).data('path');
            reservaCode = $(this).data('code');
            $("#codigoReservaSpan").html(reservaCode);
        });


        $('#btnContinueDelete').click(function () {
            window.location = routeDelete;
        });                                                                                                                                                                                                                                                                                                                                                           //$('#Codigo')
    </script>
}