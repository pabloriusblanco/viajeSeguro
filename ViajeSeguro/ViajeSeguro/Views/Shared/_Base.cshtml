<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="author" content="Pablo Rius Blanco">
    <title>@ViewData["Title"]</title>

    <!--Fonts and icons-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" rel="stylesheet" crossorigin="anonymous">

    <!-- CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/now-ui-dashboard.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
</head>

<body class="main sidebar-mini">
    <div class="wrapper " id="main_wrapper">
        @await Html.PartialAsync("_SideMenu")
        <div class="main-panel">
            @await Html.PartialAsync("_topBar")
            @RenderBody()
            @await Html.PartialAsync("_Footer")
        </div>
    </div>

    <script src='@Url.Content("~/js/core/jquery.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/js/core/popper.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/js/core/bootstrap.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/js/plugins/perfect-scrollbar.jquery.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/js/plugins/moment-with-locales.min.js")'></script>
    <script src='@Url.Content("~/js/plugins/bootstrap-datetimepicker.js")'></script>
    <script src='@Url.Content("~/js/plugins/bootstrap-selectpicker.js")'></script>
    <script src='@Url.Content("~/js/plugins/jquery-jvectormap.js")'></script>
    <script src='@Url.Content("~/js/plugins/jquery.dataTables.min.js")' type="text/javascript" charset="utf8"></script>
    <script src='@Url.Content("~/js/plugins/jasny-bootstrap.min.js")'></script>
    <script src='@Url.Content("~/js/site.js")' type="text/javascript"></script>
</body>

@await RenderSectionAsync("Scripts", required: false)

</html>

